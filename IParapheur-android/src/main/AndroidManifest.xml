<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.adullact.iparapheur"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="18" />

    <application
        android:name="org.adullact.iparapheur.controller.IParapheur"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="org.adullact.iparapheur.controller.dossier.DossierListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.adullact.iparapheur.controller.dossier.DossierDetailActivity"
            android:label="@string/title_dossier_detail"
            android:parentActivityName=".DossierListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".DossierListActivity" />
        </activity>
        <activity
            android:name=".controller.preferences.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
    </application>

</manifest>
