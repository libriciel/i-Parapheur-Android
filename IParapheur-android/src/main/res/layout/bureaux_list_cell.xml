<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/dossiers_list_item_selectable_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="88dp"
    android:background="@drawable/list_background_secondary50"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/bureau_list_cell_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/mockup_bureau_title"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        android:textColor="@color/text_black"
        android:textSize="16sp"
        tools:ignore="NestedWeights" />

    <TextView
        android:id="@+id/bureau_list_cell_todo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/mockup_bureau_todo"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        android:textColor="@color/text_black_secondary"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/bureau_list_cell_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/mockup_sync_date"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        android:textColor="@color/text_black_secondary"
        android:textSize="13sp" />

</LinearLayout>