<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/dossiers_list_item_selectable_layout"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="96dp"
              android:paddingLeft="30dp"
              android:paddingRight="30dp"
              android:gravity="center"
              android:background="@drawable/list_background_main_secondary_color">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginRight="16dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/bureau_list_cell_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearanceListItemSmall"
            android:maxLines="1"
            android:gravity="bottom"
            android:ellipsize="end"
            android:textColor="@color/text_black"
            android:text="@string/mockup_dossier_title"/>


        <TextView
            android:id="@+id/bureau_list_cell_todo_count"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearanceListItemSmall"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/text_black_secondary"
            android:text="@string/mockup_dossier_title"/>

    </LinearLayout>

    <TextView
        android:id="@+id/bureau_list_cell_late"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:gravity="center"
        android:textColor="@color/text_white"
        android:background="@drawable/badge_red_shape"
        android:textSize="14sp"
        android:text="@string/mockup_bureau_late"/>

</LinearLayout>