<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_200"
    android:clickable="true">

    <ListView
        android:id="@+id/preferences_certificates_fragment_main_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:divider="@color/grey_200"
        android:paddingTop="8dp"
        tools:listitem="@layout/preferences_certificates_fragment_cell" />

    <LinearLayout
        android:id="@+id/preferences_certificates_fragment_empty_view_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/pref_certificates_no_content"
            android:src="@drawable/ic_vpn_key_black_48dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/pref_certificates_no_content"
            android:textColor="@color/text_black" />

        <Button
            android:id="@+id/preferences_certificates_fragment_certificate_tuto_button"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/pref_certificates_tuto_import"
            android:textColor="@color/text_white" />

    </LinearLayout>

</FrameLayout>