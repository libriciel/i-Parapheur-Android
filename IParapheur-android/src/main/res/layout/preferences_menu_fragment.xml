<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_200">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="false"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:elevation="2dp"
                android:padding="16dp"
                card_view:cardCornerRadius="4dp"
                tools:ignore="UnusedAttribute">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@android:color/background_light"
                        android:gravity="center_vertical"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:text="@string/preferences_label_general"
                        android:textColor="@color/settings_primary_500"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:id="@+id/preferences_account"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/list_background_settings_secondary_color"
                        android:clickable="true"
                        android:orientation="horizontal"
                        tools:ignore="UseCompoundDrawables">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_margin="16dp"
                            android:contentDescription="@string/pref_header_accounts"
                            android:src="@drawable/ic_account_box_white_24dp"
                            android:tint="@color/settings_primary_500" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:gravity="center_vertical"
                            android:text="@string/pref_header_accounts"
                            android:textColor="@color/text_black"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/preferences_certificates"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/list_background_settings_secondary_color"
                        android:clickable="true"
                        android:orientation="horizontal"
                        tools:ignore="UseCompoundDrawables">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_margin="16dp"
                            android:contentDescription="@string/pref_header_certificates"
                            android:src="@drawable/ic_verified_user_white_24dp"
                            android:tint="@color/settings_primary_500" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:gravity="center_vertical"
                            android:text="@string/pref_header_certificates"
                            android:textColor="@color/text_black"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:elevation="2dp"
                android:padding="16dp"
                card_view:cardCornerRadius="4dp"
                tools:ignore="UnusedAttribute">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@android:color/background_light"
                        android:gravity="center_vertical"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:text="@string/preferences_header_about"
                        android:textColor="@color/settings_primary_500"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:id="@+id/preferences_about"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/list_background_settings_secondary_color"
                        android:clickable="true"
                        android:orientation="horizontal"
                        tools:ignore="UseCompoundDrawables">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_margin="16dp"
                            android:contentDescription="@string/pref_header_legal"
                            android:src="@drawable/ic_info_outline_white_24dp"
                            android:tint="@color/settings_primary_500" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:gravity="center_vertical"
                            android:text="@string/pref_header_legal"
                            android:textColor="@color/text_black"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/preferences_licenses"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/list_background_settings_secondary_color"
                        android:clickable="true"
                        android:orientation="horizontal"
                        tools:ignore="UseCompoundDrawables">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_margin="16dp"
                            android:contentDescription="@string/pref_header_licenses"
                            android:src="@drawable/ic_copyright_white_24dp"
                            android:tint="@color/settings_primary_500" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:gravity="center_vertical"
                            android:text="@string/pref_header_licenses"
                            android:textColor="@color/text_black"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>
</FrameLayout>