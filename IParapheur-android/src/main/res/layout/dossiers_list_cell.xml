<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dossiers_list_item_selectable_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_background_color">

    <FrameLayout
        android:id="@+id/dossiers_list_item_image"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp">

        <ImageView
            android:id="@+id/dossiers_list_item_image_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/etape_courante"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_sign_24dp"/>

        <ImageView
            android:id="@+id/dossiers_list_item_image_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_archivage_24dp"
            android:visibility="gone"/>
    </FrameLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="56dp"
        android:layout_marginStart="56dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/dossiers_list_item_title"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/listPreferredItemHeightSmall"
            android:textAppearance="?android:attr/textAppearanceListItemSmall"
            android:gravity="bottom"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/text_black"
            android:text="@string/mockup_dossier_title"/>

        <TextView
            android:id="@+id/dossiers_list_item_extras"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/listPreferredItemHeightSmall"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/text_black_secondary"
            android:text="@string/mockup_dossier_subtitle"/>
    </LinearLayout>

    <CheckBox
        style="@style/CheckBoxStyle"
        android:id="@+id/dossiers_list_item_checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_gravity="center"
        android:visibility="gone"/>

</FrameLayout>