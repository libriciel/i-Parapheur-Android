<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@drawable/list_background_secondary50"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingEnd="16dp"
    android:paddingLeft="44dp"
    android:paddingRight="16dp"
    android:paddingStart="44dp">

    <TextView
        android:id="@+id/filter_dialog_fragment_expandablelistview_type_title"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:textColor="@color/text_black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/filter_dialog_fragment_expandablelistview_type_checkbox_indeterminate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="false"
            android:contentDescription="@string/Indeterminate"
            android:src="@drawable/checkbox_indeterminate_shape_secondary500" />

        <CheckBox
            android:id="@+id/filter_dialog_fragment_expandablelistview_type_checkbox"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </FrameLayout>

</LinearLayout>