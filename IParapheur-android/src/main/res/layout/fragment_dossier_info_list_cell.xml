<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">

        <ImageView
            android:id="@+id/etape_circuit_icon_type"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="18dp"
            android:contentDescription="@string/icon_action" />

        <ImageView
            android:id="@+id/etape_circuit_icon_status_done"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/icon_background_round_green50"
            android:contentDescription="@string/icon_action"
            android:scaleType="center"
            android:src="@drawable/ic_done_white_18dp"
            android:tint="@color/green_500" />

        <ImageView
            android:id="@+id/etape_circuit_icon_status_reject"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/icon_background_round_red50"
            android:contentDescription="@string/icon_action"
            android:scaleType="center"
            android:src="@drawable/ic_clear_white_18dp"
            android:tint="@color/red_500" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/etape_circuit_bureau"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="bottom"
            android:maxLines="1"
            android:textColor="@color/text_black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/etape_circuit_validation"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="top"
            android:maxLines="1"
            android:textColor="@color/text_black_secondary"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>