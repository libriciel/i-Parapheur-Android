<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/action_visa_public_annotation_label"
            android:layout_width="170dp"
            android:layout_height="match_parent"
            android:text="@string/public_annotation"
            android:textColor="@color/edittext_label_activable"
            android:textSize="12sp"/>

        <EditText
            android:id="@+id/action_visa_public_annotation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:lines="4"
            android:textColor="@color/text_black"
            android:textSize="16sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:baselineAligned="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/action_visa_private_annotation_label"
            android:layout_width="170dp"
            android:layout_height="match_parent"
            android:text="@string/private_annotation"
            android:textColor="@color/edittext_label_activable"
            android:textSize="12sp"/>

        <EditText
            android:id="@+id/action_visa_private_annotation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:lines="4"
            android:textColor="@color/text_black"
            android:textSize="16sp"/>
    </LinearLayout>

</LinearLayout>