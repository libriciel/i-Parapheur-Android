<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/settings_700"
    android:fitsSystemWindows="true"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="org.adullact.iparapheur.controller.preferences.PreferencesActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey_50"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/preferences_activity_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/settings_500"
            android:elevation="4dp"
            android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:theme="@style/AppTheme.Settings.Toolbar"
            tools:ignore="UnusedAttribute"/>

        <fragment
            android:id="@+id/preferences_activity_content"
            android:name="org.adullact.iparapheur.controller.preferences.PreferencesMenuFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:tag="preferences_menu_fragment"
            tools:layout="@layout/preferences_menu_fragment"/>

    </LinearLayout>
</LinearLayout>
