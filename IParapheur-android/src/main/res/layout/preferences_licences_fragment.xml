<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_200">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="false"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:elevation="2dp"
                android:padding="16dp"
                card_view:cardCornerRadius="4dp"
                tools:ignore="UnusedAttribute">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <TextView
                        style="@android:style/TextAppearance.DeviceDefault.Large"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="@string/about_main_title"
                        android:textColor="@color/text_black"
                        android:textStyle="bold"/>

                    <!-- About -->

                    <TextView
                        android:id="@+id/about_version_number_textview"
                        style="@android:style/TextAppearance.DeviceDefault.Medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/about_text_margin_large"
                        android:text="@string/about_version_number"
                        android:textColor="@color/text_black"
                        android:textStyle="bold"/>

                    <TextView
                        style="@android:style/TextAppearance.DeviceDefault.Medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/about_text_margin_medium"
                        android:text="@string/about_copyright"
                        android:textColor="@color/text_black"/>

                    <!-- Legal -->

                    <TextView
                        style="@android:style/TextAppearance.DeviceDefault.Medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/about_text_margin_large"
                        android:text="@string/about_legal_title"
                        android:textColor="@color/text_black"
                        android:textStyle="bold"/>

                    <TextView
                        style="@android:style/TextAppearance.DeviceDefault.Medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/about_text_margin_medium"
                        android:text="@string/about_legal_content_part1"
                        android:textColor="@color/text_black"/>

                    <TextView
                        style="@android:style/TextAppearance.DeviceDefault.Medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/about_text_margin_medium"
                        android:text="@string/about_legal_content_part2"
                        android:textColor="@color/text_black"/>

                    <!-- Licenses -->

                    <TextView
                        style="@android:style/TextAppearance.DeviceDefault.Large"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/about_text_margin_xlarge"
                        android:gravity="center_horizontal"
                        android:text="@string/about_library_licenses_title"
                        android:textColor="@color/text_black"
                        android:textStyle="bold"/>

                    <!-- MuPDF license -->

                    <TextView
                        style="@android:style/TextAppearance.DeviceDefault.Medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/about_text_margin_large"
                        android:text="@string/about_library_license_mupdf_title"
                        android:textColor="@color/text_black"
                        android:textStyle="bold"/>

                    <TextView
                        style="@android:style/TextAppearance.DeviceDefault.Medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/about_text_margin_medium"
                        android:text="@string/about_library_license_mupdf_copyright"
                        android:textColor="@color/text_black"/>

                    <TextView
                        style="@android:style/TextAppearance.DeviceDefault.Medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/about_text_margin_medium"
                        android:text="@string/about_library_license_mupdf_license"
                        android:textColor="@color/text_black"/>

                    <!-- Spongy license -->

                    <TextView
                        style="@android:style/TextAppearance.DeviceDefault.Medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/about_text_margin_large"
                        android:text="@string/about_library_license_spongy_title"
                        android:textColor="@color/text_black"
                        android:textStyle="bold"/>

                    <TextView
                        style="@android:style/TextAppearance.DeviceDefault.Medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/about_text_margin_medium"
                        android:text="@string/about_library_license_spongy_copyright"
                        android:textColor="@color/text_black"/>

                    <TextView
                        style="@android:style/TextAppearance.DeviceDefault.Medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/about_text_margin_medium"
                        android:text="@string/about_library_license_spongy_license"
                        android:textColor="@color/text_black"/>

                    <!-- Sun Security support license -->

                    <TextView
                        style="@android:style/TextAppearance.DeviceDefault.Medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/about_text_margin_large"
                        android:text="@string/about_library_license_sun_title"
                        android:textColor="@color/text_black"
                        android:textStyle="bold"/>

                    <TextView
                        style="@android:style/TextAppearance.DeviceDefault.Medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/about_text_margin_medium"
                        android:text="@string/about_library_license_sun_copyright"
                        android:textColor="@color/text_black"/>

                    <TextView
                        style="@android:style/TextAppearance.DeviceDefault.Medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/about_text_margin_medium"
                        android:text="@string/about_library_license_sun_license"
                        android:textColor="@color/text_black"/>

                    <!-- Android support license -->

                    <TextView
                        style="@android:style/TextAppearance.DeviceDefault.Medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/about_text_margin_large"
                        android:text="@string/about_library_license_android_support_title"
                        android:textColor="@color/text_black"
                        android:textStyle="bold"/>

                    <TextView
                        style="@android:style/TextAppearance.DeviceDefault.Medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/about_text_margin_medium"
                        android:text="@string/about_library_license_android_support_copyright"
                        android:textColor="@color/text_black"/>

                    <TextView
                        style="@android:style/TextAppearance.DeviceDefault.Medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/about_text_margin_medium"
                        android:text="@string/about_library_license_android_support_license"
                        android:textColor="@color/text_black"/>

                    <!-- Gson license -->

                    <TextView
                        style="@android:style/TextAppearance.DeviceDefault.Medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/about_text_margin_large"
                        android:text="@string/about_library_license_gson_title"
                        android:textColor="@color/text_black"
                        android:textStyle="bold"/>

                    <TextView
                        style="@android:style/TextAppearance.DeviceDefault.Medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/about_text_margin_medium"
                        android:text="@string/about_library_license_gson_copyright"
                        android:textColor="@color/text_black"/>

                    <TextView
                        style="@android:style/TextAppearance.DeviceDefault.Medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/about_text_margin_medium"
                        android:text="@string/about_library_license_gson_license"
                        android:textColor="@color/text_black"/>

                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</FrameLayout>