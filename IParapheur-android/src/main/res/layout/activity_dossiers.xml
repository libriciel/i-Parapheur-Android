<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_dossiers_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:divider="@android:drawable/divider_horizontal_bright"
    android:elevation="7dp"
    tools:context=".MainActivity">

    <!-- The main content view -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/activity_dossiers_toolbar"/>

        <FrameLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="false">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:baselineAligned="false">

                <FrameLayout
                    android:id="@+id/left_fragment"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/text_black_divider"/>

                <fragment
                    android:id="@+id/dossier_detail"
                    android:name="org.adullact.iparapheur.controller.dossier.DossierDetailFragment"
                    android:tag="Dossier_details"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_weight="3"
                    tools:layout="@layout/fragment_dossier_detail"/>
            </LinearLayout>

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/progressBar"
                android:max="100"
                android:visibility="invisible"/>

        </FrameLayout>
    </LinearLayout>

    <!-- The navigation drawer -->

    <FrameLayout
        android:orientation="horizontal"
        android:id="@+id/activity_dossiers_left_drawer"
        android:layout_width="320dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:baselineAligned="false">

        <fragment
            android:name="org.adullact.iparapheur.controller.bureau.BureauxFragment"
            android:id="@+id/activity_dossiers_bureaux_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout="@layout/account_list_fragment"
            android:tag="Bureaux_list"/>
    </FrameLayout>

</android.support.v4.widget.DrawerLayout>
