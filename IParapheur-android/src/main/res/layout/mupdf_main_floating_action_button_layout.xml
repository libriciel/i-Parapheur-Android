<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/mupdffragment_fabbutton_white_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/activated_fab_white_background"
        android:visibility="gone" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:clipToPadding="false"
        android:gravity="bottom|center_horizontal"
        android:orientation="vertical"
        android:padding="16dp">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:padding="8dp">

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:elevation="2dp"
                app:cardCornerRadius="4dp"
                tools:ignore="UnusedAttribute">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8dp"
                    android:text="@string/add_annotation"
                    android:textColor="@color/text_black" />

            </android.support.v7.widget.CardView>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/mupdf_main_annotation_fabbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_speaker_notes_black_24dp"
                android:visibility="visible"
                app:backgroundTint="@color/grey_200"
                app:borderWidth="0dp"
                app:elevation="6dp"
                app:fabSize="mini"
                app:pressedTranslationZ="12dp"
                app:rippleColor="@color/grey_400" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:padding="8dp">

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:elevation="2dp"
                app:cardCornerRadius="4dp"
                tools:ignore="UnusedAttribute">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8dp"
                    android:text="@string/cancel"
                    android:textColor="@color/text_black" />

            </android.support.v7.widget.CardView>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/mupdf_main_cancel_fabbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_clear_white_24dp"
                android:visibility="visible"
                app:backgroundTint="@color/red_500"
                app:borderWidth="0dp"
                app:elevation="6dp"
                app:fabSize="mini"
                app:pressedTranslationZ="12dp"
                app:rippleColor="@color/red_700" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:padding="8dp">

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:elevation="2dp"
                android:padding="8dp"
                app:cardCornerRadius="4dp"
                tools:ignore="UnusedAttribute">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8dp"
                    android:text="@string/action_valider"
                    android:textColor="@color/text_black" />

            </android.support.v7.widget.CardView>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/mupdf_main_validate_fabbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_done_white_24dp"
                android:visibility="visible"
                app:backgroundTint="@color/green_500"
                app:borderWidth="0dp"
                app:elevation="6dp"
                app:fabSize="normal"
                app:pressedTranslationZ="12dp"
                app:rippleColor="@color/green_700" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:padding="8dp">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/mupdf_main_menu_fabbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_add_white_24dp"
                android:visibility="visible"
                app:backgroundTint="@color/brown_500"
                app:borderWidth="0dp"
                app:elevation="6dp"
                app:fabSize="normal"
                app:pressedTranslationZ="12dp"
                app:rippleColor="@color/brown_700" />

        </TableRow>
    </TableLayout>

</FrameLayout>
