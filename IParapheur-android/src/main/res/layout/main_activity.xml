<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_dossiers_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:divider="@android:drawable/divider_horizontal_bright"
    android:background="@color/primary_700"
    android:elevation="7dp"
    tools:context=".MainActivity">

    <!-- The main content view -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <include
            android:id="@+id/home_toolbar"
            layout="@layout/activity_dossiers_toolbar"/>

        <FrameLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="false">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:baselineAligned="false">

                <FrameLayout
                    android:id="@+id/left_fragment"
                    android:layout_width="240dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/background_light"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#8A8A8A"/>

                <fragment
                    android:id="@+id/dossier_detail"
                    android:name="org.adullact.iparapheur.controller.dossier.DossierDetailFragment"
                    android:tag="Dossier_details"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:layout="@layout/fragment_dossier_detail"/>
            </LinearLayout>

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/progressBar"
                android:max="100"
                android:visibility="invisible"/>

        </FrameLayout>
    </LinearLayout>

    <!-- The navigation drawer -->

    <FrameLayout
        android:orientation="horizontal"
        android:id="@+id/activity_dossiers_left_drawer"
        android:layout_width="320dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:baselineAligned="false"
        android:background="@android:color/background_light"
        android:fitsSystemWindows="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="178dp"
                    android:background="@drawable/navigation_drawer_header_gradient"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/parapheurs"
                    android:textColor="@color/text_white"
                    android:layout_gravity="bottom"
                    android:padding="25dp"
                    android:textSize="14sp"/>

                <View
                    android:id="@+id/navigation_drawer_fake_status_bar"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:background="@color/secondary_700"/>

            </FrameLayout>

            <FrameLayout
                android:id="@+id/drawer_panel"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <fragment
                    android:name="org.adullact.iparapheur.controller.account.AccountListFragment"
                    android:id="@+id/activity_dossiers_bureaux_fragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:tag="@string/account_fragment_tag"
                    tools:layout="@layout/account_list_fragment"/>

            </FrameLayout>

        </LinearLayout>
    </FrameLayout>

</android.support.v4.widget.DrawerLayout>
