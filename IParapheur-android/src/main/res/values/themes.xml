<resources>

    <!-- Root -->

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:textColor">@color/text_black</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base">
        <item name="android:textColorPrimary">@color/text_white</item>
        <item name="android:textColorSecondary">@color/text_white</item>
    </style>

    <!-- Main -->

    <style name="AppTheme.Main.Base" parent="AppTheme">
        <item name="colorPrimary">@color/primary_500</item>
        <item name="colorPrimaryDark">@color/primary_700</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:actionModeBackground">@color/contextual_500</item>
    </style>

    <style name="AppTheme.Main" parent="AppTheme.Main.Base">
        <item name="actionModeStyle">@style/AppTheme.Main.CAB</item>
    </style>

    <!-- Toolbars -->

    <style name="AppTheme.Main.Toolbar" parent="Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:textColorSecondary">@color/text_white</item>
    </style>

    <style name="AppTheme.Main.CAB" parent="Widget.AppCompat.Light.ActionBar.Solid">
        <item name="background">@color/contextual_500</item>
        <item name="backgroundSplit">@color/contextual_500</item>
    </style>

    <!-- Settings -->

    <style name="AppTheme.Settings" parent="android:Theme.Holo.Light"/>

</resources>
