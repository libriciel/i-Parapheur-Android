<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical" >

    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp" >
            
        <TextView
            android:id="@+id/office_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textAppearance="?android:attr/textAppearanceLarge" 
            android:text="Office" />

    </RelativeLayout>

    <View 
        android:layout_width="wrap_content"
        android:layout_height="2dp" 
        android:background="@color/grey_strong"
        />
        
    <LinearLayout 
        android:id="@+id/office_main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <fragment
            android:id="@+id/office_list_view"
            android:name="org.adullact.iparapheur.tab.ui.office.OfficeFolderListFragment"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            />

        <WebView
            android:id="@+id/office_details_webview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            />
        
    </LinearLayout>

</LinearLayout>
