<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/office_facet_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/office_facet_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:drawableLeft="@drawable/ic_facet_action"
            android:drawablePadding="8dp"
            android:gravity="left|center_vertical"
            android:text="Action" />

        <Button
            android:id="@+id/office_facet_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:drawableLeft="@drawable/ic_facet_type"
            android:drawablePadding="8dp"
            android:gravity="left|center_vertical"
            android:text="Type" />

        <Button
            android:id="@+id/office_facet_subtype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:drawableLeft="@drawable/ic_facet_subtype"
            android:drawablePadding="8dp"
            android:gravity="left|center_vertical"
            android:text="Sous-type" />

        <Button
            android:id="@+id/office_facet_schedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:drawableLeft="@drawable/ic_facet_schedule"
            android:drawablePadding="8dp"
            android:gravity="left|center_vertical"
            android:text="Échéance" />
    </LinearLayout>

    <TextView
        android:id="@+id/office_facet_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/office_facet_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:paddingBottom="8dp"
        android:text="Aucun filtre." />

</RelativeLayout>