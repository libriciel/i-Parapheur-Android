<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:id="@+id/folder_action_dialog_layout_root"
              android:padding="8dp" >
                  
    <TextView android:id="@+id/folder_action_dialog_title"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Séance ordinaire du conseil municipal"
              android:textAppearance="?android:attr/textAppearanceLarge" />
            
    <View android:layout_width="wrap_content"
          android:layout_height="2dp"
          android:background="@color/grey" />

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
        
        <LinearLayout android:layout_width="0dp"
                      android:layout_height="wrap_content" 
                      android:layout_weight="1"
                      android:orientation="vertical"
                      android:padding="8dp"
                      android:minWidth="300dp" >
        
            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="Annotation publique" />
	            
            <EditText android:id="@+id/folder_annotation_public"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:ems="10"
                      android:inputType="textMultiLine"
                      android:lines="8"
                      android:gravity="top|left" />
	
        </LinearLayout>

        <LinearLayout android:layout_width="0dp"
                      android:layout_height="wrap_content" 
                      android:layout_weight="1"
                      android:orientation="vertical"
                      android:padding="8dp"
                      android:minWidth="300dp">
                          
            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="Annotation privée" />
                      
            <EditText android:id="@+id/folder_annotation_private"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:inputType="textMultiLine"
                      android:lines="8" 
                      android:gravity="top|left" />
                      
        </LinearLayout>
	    
    </LinearLayout>

</LinearLayout>