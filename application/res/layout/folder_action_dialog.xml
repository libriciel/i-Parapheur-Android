<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:id="@+id/folder_action_dialog_layout_root"
              android:padding="8dp" >
                  
    <TextView android:id="@+id/folder_action_dialog_title"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Séance ordinaire du conseil municipal"
              android:textAppearance="?android:attr/textAppearanceLarge" />
            
    <View android:layout_width="wrap_content"
          android:layout_height="2dp"
          android:background="@color/grey" />

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
        
        <LinearLayout android:layout_width="0dp"
                      android:layout_height="wrap_content" 
                      android:layout_weight="1"
                      android:orientation="vertical"
                      android:padding="8dp"
                      android:minWidth="300dp" >
        
            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="Annotation publique" />
	            
            <EditText android:id="@+id/folder_annotation_public"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:ems="10"
                      android:inputType="textMultiLine"
                      android:lines="5"
                      android:gravity="top|left" />

        </LinearLayout>

        <LinearLayout android:layout_width="0dp"
                      android:layout_height="wrap_content" 
                      android:layout_weight="1"
                      android:orientation="vertical"
                      android:padding="8dp"
                      android:minWidth="300dp">
                          
            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="Annotation privée" />
                      
            <EditText android:id="@+id/folder_annotation_private"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:inputType="textMultiLine"
                      android:lines="5" 
                      android:gravity="top|left" />
                      
        </LinearLayout>
	    
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/folder_action_dialog_layout_cert" android:visibility="gone">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="false"
                android:text="@string/folder_action_dialog_selected_certificate"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/folder_action_dialog_button_reload_cert" android:src="@drawable/ic_refresh"
                    android:layout_gravity="center_vertical"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/folder_action_dialog_selected_cert" android:layout_gravity="center_vertical"
                    android:textStyle="bold" android:layout_marginLeft="15dp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>