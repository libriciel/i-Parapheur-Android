<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/folder_filelist_item_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="12dp" >

    <ImageView
        android:id="@+id/dashboard_officesgrid_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_folder"
        />

    <TextView
        android:id="@+id/dashboard_officesgrid_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dashboard_officesgrid_item_icon"
        android:layout_marginTop="6dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Office"
        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/dashboard_officesgrid_item_icon"
        android:layout_toRightOf="@+id/dashboard_officesgrid_item_icon"
        android:layout_marginBottom="-8dp"
        android:layout_marginLeft="-20dp"
    >
         
        <TextView
            android:id="@+id/dashboard_officesgrid_item_todo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:typeface="monospace"
            android:textStyle="bold"
            android:textColor="#DDDDDD" 
            android:background="@drawable/dashboard_officesgrid_item_todo_background"
            />
    
        <TextView
            android:id="@+id/dashboard_officesgrid_item_late"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0" 
            android:typeface="monospace"
            android:textStyle="bold"
            android:textColor="#DDDDDD" 
            android:background="@drawable/dashboard_officesgrid_item_late_background"
            android:layout_marginLeft="1dp"
            />
        
    </LinearLayout>
    
</RelativeLayout>