<?xml version="1.0" encoding="utf-8"?>
<manifest  xmlns:android="http://schemas.android.com/apk/res/android"
           package="org.adullact.iparapheur.tab" 
           android:versionCode="1" 
           android:versionName="1.0-SNAPSHOT">
    
    <!-- Android >= 4.x -->
    <uses-sdk  
        android:targetSdkVersion="15"
        android:minSdkVersion="15"/>
               
    <!-- Only supports Tablets -->
    <supports-screens 
        android:smallScreens="false"
        android:normalScreens="false"
        android:largeScreens="true"
        android:xlargeScreens="true" />
    
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />

    <application 
        android:name=".IParapheurTabApplication"
        android:icon="@drawable/icon" 
        android:label="@string/app_name"
        android:theme="@style/Theme.Holo.Light.IParapheur"
        android:allowClearUserData="false">
        
        <activity 
            android:name=".ui.splashscreen.SplashScreenActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity 
            android:name=".ui.dashboard.DashboardActivity"
            android:screenOrientation="landscape">
        </activity>
        <activity 
            android:name=".ui.office.OfficeActivity"
            android:screenOrientation="landscape">
        </activity>
        <activity 
            android:name=".ui.folder.FolderActivity"
            android:screenOrientation="landscape">
        </activity>
        <activity 
            android:name=".ui.settings.AccountsActivity"
            android:screenOrientation="landscape"
            android:noHistory="true"
            android:excludeFromRecents="true">
        </activity>
        
    </application>

</manifest>
